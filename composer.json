{
  "name": "ucraft-com/omnipay-converse",
  "type": "library",
  "description": "Converse gateway for Omnipay payment processing library",
  "keywords": [
    "gateway",
    "merchant",
    "omnipay",
    "pay",
    "payment",
    "converse",
    "purchase"
  ],
  "homepage": "https://github.com/ucraft-com/omnipay-converse",
  "license": "MIT",
  "authors": [
    {
      "name": "Armen Hovhannisyan",
      "email": "armen.hov@ucraft.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Omnipay\\Converse\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require": {
    "omnipay/common": "^3",
    "ext-json": "*",
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.8",
    "php-http/guzzle7-adapter": "^1.0"
  },
  "require-dev": {
    "omnipay/tests": "^4",
    "http-interop/http-factory-guzzle": "^1.2",
    "symfony/var-dumper": "^6.4",
    "friendsofphp/php-cs-fixer": "^3.40"
  },
  "scripts": {
    "style": [
      "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    ],
    "test": [
      "vendor/bin/phpunit --testsuite \"Unit\""
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
